<h2 class="grey ui center aligned medium icon header headertitle">
  <i class="inverted red circular code icon"></i>
  Welcome to the chatroom!
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui small feed" id="message-container">
          <h4 class="ui header">Current chatroom</h4>
          <%= render @messages %>
        </div>
      </div>
      <div class="extra content">
        <%= form_for(@message, html: { class: "ui reply form", role: "form" }, url: message_path) do |f| %>
          <div class="field">
            <div class="ui fluid icon input">
              <%= f.text_field :body %>
              <%= f.button '<i class="code icon"></i>'.html_safe %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <div class="four wide column">
    <div class="ui fluid raised card chatbox">
      <div class="content">
        <div class="ui inverted vertical menu">
          <a href="" class="active item">
            Home
          </a>
          <a href="" class="item">
            Messages
          </a>
          <a href="" class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
